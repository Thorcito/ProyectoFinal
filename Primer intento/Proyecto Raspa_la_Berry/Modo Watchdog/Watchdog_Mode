			print(persiguiendo)
			if ubicaciónCanon = ubicacionObjetivo
				print(en mira)
				disparar()
			else
				print(persiguiendo) #continúa persiguiendo objetivo			
		else
			# detener perseguirObjetivo() opcional
			print(perdido)
			return buscarObjetivo()				

	generarInstruccion()
